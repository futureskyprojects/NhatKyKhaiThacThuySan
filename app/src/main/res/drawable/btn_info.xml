<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" android:enterFadeDuration="300" android:exitFadeDuration="300">
    <item android:state_pressed="false">
        <shape>
            <solid android:color="#2db7f5" />
            <corners android:radius="@dimen/default_corners_radius" />
        </shape>
    </item>

    <item android:state_pressed="true">
        <shape>
            <solid android:color="#C12DB7F5" />
            <corners android:radius="@dimen/default_corners_radius" />
        </shape>
    </item>
</selector>