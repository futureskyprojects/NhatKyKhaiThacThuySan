<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" android:enterFadeDuration="300" android:exitFadeDuration="300">
    <item android:state_focused="false" android:state_pressed="false">
        <shape>
            <stroke android:width="1dp" android:color="@color/default_border_color" />
            <solid android:color="#FFF" />
            <corners android:radius="@dimen/default_corners_radius" />
        </shape>
    </item>
    <item android:state_focused="true" android:state_pressed="true">
        <shape>
            <stroke android:width="1dp" android:color="@color/lightPrimary" />
            <solid android:color="#FFF" />
            <corners android:radius="@dimen/default_corners_radius" />
        </shape>
    </item>

    <item android:state_focused="true" android:state_pressed="false">
        <shape>
            <stroke android:width="1dp" android:color="@color/lightPrimary" />
            <solid android:color="#FFF" />
            <corners android:radius="@dimen/default_corners_radius" />
        </shape>
    </item>

</selector>